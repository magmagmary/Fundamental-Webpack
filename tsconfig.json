{
	"compilerOptions": {
		"jsx": "react-jsx",
		"allowJs": true,
		"target": "ES5",
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"],
			"@assets/*": ["./src/assets/*"],
			"@features/*": ["./src/features/*"],
			"@src/*": ["./src/*"]
		}
	},
	"typeAcquisition": { "include": ["jest"] },
	"include": ["src/**/*"]
}
